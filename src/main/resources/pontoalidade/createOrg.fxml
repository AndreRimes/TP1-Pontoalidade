<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import javafx.scene.shape.SVGPath?>

<AnchorPane  xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" fx:controller="pontoalidade.LoginController">
    <stylesheets>
        <URL value="@../styles/createOrg.css"/>
    </stylesheets>

     <VBox fx:id="box" alignment="CENTER" spacing="30" 
          AnchorPane.topAnchor="55" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.bottomAnchor="55"> 
         <HBox fx:id="backDiv" alignment="TOP_LEFT" spacing="10">
            <SVGPath fx:id="backArrow" content="M10 0 L0 5 L10 10 Z" fill="white" />
        </HBox>   
        <Label text="Cadastro de Organizacao" fx:id="title" />
       <VBox fx:id="nameBox" alignment="CENTER" spacing="2">
        <Label fx:id="nameLabel" text="Nome da Organizacao: " />
        <TextField fx:id="nameField" promptText="Nome da Organizacao:" />
       </VBox> v          
       <VBox fx:id="emailBox" alignment="CENTER" spacing="2">
            <Label text="cnpj: " fx:id="cnpjLabel"/>
            <TextField fx:id="cnpjField" promptText="CNPJ" />
        </VBox>
        <VBox fx:id="senhaBox" alignment="CENTER" spacing="2">
            <Label text="Senha" fx:id="senhaLabel" />
            <PasswordField fx:id="passwordField" promptText="Password" />
        </VBox>        
        <Hyperlink text="Ja possui uma organizacao? Clique aqui" fx:id="signupLink" />
        <Button text="Cadastrar" fx:id="btn" />
    </VBox>
</AnchorPane>
